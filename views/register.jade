extends layout

block content

	input(type="button", value="Login" onclick="window.location.href='/login'")
	input(type="button", value="Register" onclick="window.location.href='/register'")
	input(type="button", value="Forgot Password" onclick="window.location.href='/forgot'")
	input(type="button", value="Login as Guest" onclick="window.location.href='/study'")

	div#register
		each error in errors
			p.errors #{error.msg}
		p.messages #{message}

		form(name="register", action="/register", method="post")
			input(type="text", name="username", value="#{username}", placeholder="Username")
			br
			input(type="email", name="email", value="#{email}", placeholder="Email")
			br
			input(type="password", name="password", placeholder="Password")
			br
			input(type="password", name="passwordConfirm", placeholder="Repeat Password")
			br
			input(type="submit", name="register", value="Register")