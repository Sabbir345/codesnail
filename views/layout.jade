doctype 5
html(lang="en")
	head
		title CodeSnail
		script(type="text/javascript", src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js")
		link(href="/stylesheets/style.css", rel="stylesheet")
	body
		div#header
			div#user
				if user
					a(class="mugshot-link", href="#{user.profile.website}", title="profile")
						img(class="mugshot", src="#{user.profile.mugshot}", alt="mugshot")
						p #{user.name}
						p points: #{user.profile.points}
					a(href="/logout") Logout
			h1 Welcome to CodeSnail
			h4 Learn new skills while completing exciting challenges.

		block content

		div#footer Built by Students